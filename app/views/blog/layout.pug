extends ../layout

append css
    link(rel='stylesheet', href='/awesome-font/css/font-awesome.css')
    link(rel='stylesheet', href='/css/blog.css')
    link(rel='stylesheet', href='/css/style.css')

block main
  block header
    // start navigation
    nav.main-navigation
      .container
        .row
          .col-sm-12
            .navbar-header
              span.nav-toggle-button.collapsed(data-toggle='collapse', data-target='#main-menu')
                span.sr-only Toggle navigation
                i.fa.fa-bars
            #main-menu.collapse.navbar-collapse.show
              ul.menu
                li.zhenlogo 调皮的绅士~
                if pathName === '/'
                  li.nav-current(role='presentation')
                    a(href='/') 首页
                esle
                  li(role='presentation')
                    a(href='/') 首页
                if pathName === '/project'
                  li.nav-current(role='presentation')
                    a(href='/') 项目
                esle
                  li(role='presentation')
                    a(href='/') 项目
                if pathName ==='/about'
                  li.nav-current(role='presentation')
                    a(href='/') 关于
                esle
                  li(role='presentation')
                    a(href='/') 关于
    // end navigation
  block body
    section.content-wrap
      .container
        .row
          block content
          block aside
            aside.col-md-4.sidebar
              // start category widget
              .widget
                h4.title 文章标签
                .content.tag-cloud
                  each category in categories
                    a(href='/posts/category/' + category.slug)
                      = category.name

              // end category widget
              // start tag cloud widget
              .widget
                h4.title 社区
                .content.community
                  p QQ群：277327792
                  p
                    a(href='http://wenda.ghostchina.com/', title='Ghost中文网问答社区', target='_blank', onclick="_hmt.push(['_trackEvent', 'big-button', 'click', '问答社区'])")
                      i.fa.fa-comments
                      |  问答社区
                  p
                    a(href='http://weibo.com/ghostchinacom', title='Ghost中文网官方微博', target='_blank', onclick="_hmt.push(['_trackEvent', 'big-button', 'click', '官方微博'])")
                      i.fa.fa-weibo
                      |  官方微博
              // end tag cloud widget
              // start widget
              .widget
                h4.title 下载 Ghost
                .content.download
                  a.btn.btn-default.btn-block(target='_blank', href='https://github.com/TryGhost/Ghost/releases', onclick="_hmt.push(['_trackEvent', 'big-button', 'click', '下载Ghost'])") Ghost 最新版（2.1.4）
              // end widget
  block footer
    footer.main-footer
      .container
        .row
          .col-sm-4
            .widget
              h4.title 友链
